@model AgriConnectLibrary.ProductFilter

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Lato', sans-serif;
            background-image: url('/images/Tree.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            flex-direction: column;
        }

        .navbar {
            width: 100%;
        }

        h2 {
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            font-weight: bold;
        }

        input[type="submit"] {
            margin-top: 1rem;
        }

        .container {
            text-align: center;
            background-color: rgba(0, 0, 0, 0.4);
            padding: 20px;
            border-radius: 10px;
        }

        form {
            width: 650px;
            margin: 0 auto;
        }

        .table {
            margin-top: 20px;
            background-color: rgba(0, 0, 0, 0.7);
        }

            .table th, .table td {
                color: white;
            }

            .table thead th {
                background-color: #343a40;
                color: white;
            }

        .form-control {
            background-color: #343a40;
            color: white;
        }

        .filter-form .form-group label {
            color: white;
        }

        .filter-form .form-control {
            width: 100%; /* Make input fields take full width */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="@Url.Action("MainPage", "Login")">AgriConnect</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CreateFarmer", "Employee")">Create Farmer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("DisplayFarmerProfile", "Employee")">View Farmer Profiles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("DisplayProducts", "Employee")">View Products</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="modal" data-target="#helpModal">Help</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Login">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2>Products</h2>

        <form method="get" action="@Url.Action("DisplayProducts", "Employee")" class="filter-form mb-4">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="Category">Category</label>
                    <input type="text" class="form-control" id="Category" name="Category" value="@Model.Category"/>
                </div>
                <div class="form-group col-md-4">
                    <label for="StartDate">Start Date</label>
                    <input type="date" class="form-control" id="StartDate" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")"/>
                </div>
                <div class="form-group col-md-4">
                    <label for="EndDate">End Date</label>
                    <input type="date" class="form-control" id="EndDate" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")"/>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Farmer ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Date Added</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.FarmerID</td>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="helpModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <h5>Welcome to the AgriConnect Application!</h5>
                <p>This application is designed to help you integrate new energy-saving features into your existing agriculture. Here is how to use the application:</p>

                <strong>Green Energy:</strong>
                <p>Blah Blah</p>
                <p>Blah Blah</p>

                <strong>Create Farmer:</strong>
                <p>Create a farmer using the fields.</p>

                <strong>View Product List:</strong>
                <p>View all products with their remaining hours.</p>

                <strong>Logout:</strong>
                <p>If you want to log out, simply click on "Logout" in the menu. This will securely end your session.</p>

                <strong>Help:</strong>
                <p>For additional assistance on how to use specific features or navigate the application or if you have any further questions feel free to email me at: st10044023@vcconnect.edu.za</p>

                <p>Thank you for using the AgriConnect Application!</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
